# Sense extension
#https://chrome.google.com/webstore/detail/sense-beta/lhjgkmllcaadmopgmanpapmpjgmfcfig?hl=en

DELETE dbs_students
POST dbs_students
PUT dbs_students
{
    "mappings": {
        "student": {
            "properties": {
                "name" : { "type": "keyword"},
                "sex" : { "type": "keyword"},
                "subjects" : {
                    "type": "object"
                }
            }
        }
    }
}

POST dbs_students/student
{
    "name" : "Michal Priemerny",
    "sex" : "M",
    "subjects" : {
        "dbs" : {
            "2014" : 76
        },
        "psi" : {
            "2013" : 32,
            "2014" : 84
        }
    }
}

POST dbs_students/student
{
    "name" : "Zuzka Sikovna",
    "sex" : "F",
    "subjects" : {
        "dbs" : {
            "2013" : 97
        },
        "psi" : {
            "2013" : 89
        }
    }
}

